<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background_selector"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/lazilock"
        android:text="@string/title"
        android:textSize="45sp" >
    </TextView>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/introduction"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        style="@style/Widget.Button.Toggle"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginBottom="20dp"
        android:textOff=" "
        android:textOn=" " />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_default_holo_dark" 
        android:textColor="#FFD700"
        android:layout_marginBottom="0dp"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btn_greenlist"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_default_holo_dark" 
        android:layout_marginBottom="0dp"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btn_uninstall"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_default_holo_dark" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/pro_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pro_ads"
        android:textSize="16sp"></TextView>

</LinearLayout>
</ScrollView>